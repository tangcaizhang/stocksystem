<?xml version="1.0" encoding="utf-8"?>
<zzh.project.stocksystem.widget.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:layout_marginTop="10px"
    app:cardBackgroundColor="@color/whitesmoke"
    app:cardElevation="8px"
    app:contentPadding="16px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/News_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="42px"
            tools:text="2015-12-01" />

        <TextView
            android:id="@+id/News_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="42px"
            tools:text="测试文本" />
    </LinearLayout>
</zzh.project.stocksystem.widget.AutoCardView>