<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_BindCard_CardNum_Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_BindCard_CardNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="卡号(16位)"
            android:inputType="number"
            android:lines="1"
            android:maxLength="16"
            android:textSize="54px" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_BindCard_RealName_Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_BindCard_RealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="真实姓名"
            android:inputType="text"
            android:lines="1"
            android:maxLength="6"
            android:textSize="54px" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_BindCard_IdNum_Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_BindCard_IdNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="证件号码(18位)"
            android:inputType="number"
            android:lines="1"
            android:maxLength="18"
            android:textSize="54px" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_BindCard_Pass_Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_BindCard_Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="8"
            android:textSize="54px" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_BindCard_RePass_Wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_BindCard_RePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="重复密码"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="8"
            android:textSize="54px" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:text="*模拟输入即可"
        android:textColor="@color/crimson"
        android:textSize="42px" />

    <Button
        android:id="@+id/btn_Bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:text="绑定"
        android:textSize="48px" />
</LinearLayout>